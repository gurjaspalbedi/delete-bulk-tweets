{
    "manifest_version": 3,
    "name": "Tweet Deleter",
    "version": "1.0",
    "description": "Selectively delete tweets from X.com",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Tweet Deleter"
    },
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}